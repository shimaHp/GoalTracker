@page "/Goal/create"
@namespace GoalTracker.UI.Blazor.Pages.Goals

<div class="container mt-4">
    <h3 class="mb-4">Create New Goal</h3>

    <EditForm Model="@goalModel" @* OnValidSubmit="HandleValidSubmit" *@>
        <DataAnnotationsValidator />
        <ValidationSummary class="alert alert-danger" />

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label for="title" class="form-label">Title *</label>
                    <InputText id="title" class="form-control" @bind-Value="goalModel.Title" />
                    <ValidationMessage For="@(() => goalModel.Title)" />
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label for="targetDate" class="form-label">Target Date</label>
                    <InputDate id="targetDate" class="form-control" @bind-Value="goalModel.TargetDate" />
                </div>
            </div>
        </div>

        <div class="form-group mb-3">
            <label for="description" class="form-label">Description</label>
            <InputTextArea id="description" class="form-control" @bind-Value="goalModel.Description" rows="4" />
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label for="status" class="form-label">Status</label>
                    <InputSelect id="status" class="form-control" @bind-Value="goalModel.Status">
                        @foreach (var status in Enum.GetValues(typeof(GoalStatus)))
                        {
                            <option value="@status">@status</option>
                        }
                    </InputSelect>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label for="priority" class="form-label">Priority</label>
                    <InputSelect id="priority" class="form-control" @bind-Value="goalModel.Priority">
                        @foreach (var priority in Enum.GetValues(typeof(Priority)))
                        {
                            <option value="@priority">@priority</option>
                        }
                    </InputSelect>
                </div>
            </div>
        </div>

        <div class="work-items-section">
            <h4 class="mb-3">
                Work Items
                <button type="button" class="btn btn-sm btn-success ms-2" @onclick="AddWorkItem">
                    <i class="oi oi-plus"></i> Add Work Item
                </button>
            </h4>

            @for (int i = 0; i < goalModel.WorkItems.Count; i++)
            {
                int index = i;
                <div class="card mb-2">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-2">
                                    <label>Work Item Title</label>
                                    <InputText class="form-control" @bind-Value="goalModel.WorkItems[index].Title" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group mb-2">
                                    <label>Status</label>
                                    <InputSelect class="form-control" @bind-Value="goalModel.WorkItems[index].Status">
                                        @foreach (var status in Enum.GetValues(typeof(WorkItemStatus)))
                                        {
                                            <option value="@status">@status</option>
                                        }
                                    </InputSelect>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group mb-2">
                                    <label>Priority</label>
                                    <InputSelect class="form-control" @bind-Value="goalModel.WorkItems[index].Priority">
                                        @foreach (var priority in Enum.GetValues(typeof(Priority)))
                                        {
                                            <option value="@priority">@priority</option>
                                        }
                                    </InputSelect>
                                </div>
                            </div>
                        </div>
                        <div class="text-end">
                            <button type="button" class="btn btn-sm btn-danger" @onclick="() => RemoveWorkItem(index)">
                                <i class="oi oi-trash"></i> Remove
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary me-2">Create Goal</button>
            <button type="button" class="btn btn-secondary" @onclick="Cancel">Cancel</button>
        </div>
    </EditForm>
</div>