@page "/goals"



<PageTitle>Goal Tracker</PageTitle>
<!-- Create New Goal Button -->
<button class="btn btn-success mb-3" @onclick="CreateGoal">
    Create New Goal
</button>
@if (!string.IsNullOrEmpty(Message))
{
    <div class="alert alert-danger">
        @Message
    </div>
}

<h3>All Goals</h3>

@if (Goals == null)
{
    <p>Loading goals...</p>
}
else if (!Goals.Any())
{
    <p>No goals found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Created Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var goal in Goals)
            {
                <tr>
                    <td>@goal.Title</td>
                    <td>@goal.Description</td>
                    <td>@goal.CreatedDate.ToString("d")</td>
                    <td>
                        <button class="btn btn-primary" @onclick="@(() => GetGoalDetail(goal.Id))">
                            Details
                        </button>
                        <button class="btn btn-warning" @onclick="() => UpdateGoal(goal.Id)">
                            Edit
                        </button>
                        <button class="btn btn-danger" @onclick="() => DeleteGoal(goal.Id)">
                            Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>


}