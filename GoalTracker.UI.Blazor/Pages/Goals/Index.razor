@page "/goals"
@using System.Linq


<PageTitle>Goal Tracker Dashboard</PageTitle>

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="mb-0">Your Goals</h1>
                <button class="btn btn-primary" @onclick="CreateGoal">
                    <i class="bi bi-plus-circle me-2"></i>Create New Goal
                </button>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Message))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Message
            <button type="button" class="btn-close" @onclick="() => Message = string.Empty" aria-label="Close"></button>
        </div>
    }

    <div class="row mb-4">
        <div class="col-12 col-md-4 mb-3">
            <div class="card bg-light">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="text-muted mb-1">Total Goals</h5>
                            <h2 class="mb-0">@(Goals?.Count() ?? 0)</h2>
                        </div>
                        <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                            <i class="bi bi-list-check text-white fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4 mb-3">
            <div class="card bg-light">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="text-muted mb-1">Completed</h5>
                           @* todo  <h2 class="mb-0">@(Goals?.Count(g => g.IsCompleted) ?? 0)</h2> *@
                        </div>
                        <div class="bg-success rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                            <i class="bi bi-check-circle text-white fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4 mb-3">
            <div class="card bg-light">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="text-muted mb-1">In Progress</h5>
                            @* <h2 class="mb-0">@(Goals?.Count(g => !g.Priority) ?? 0)</h2> *@
                        </div>
                        <div class="bg-warning rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                            <i class="bi bi-hourglass-split text-white fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="card shadow">
               @*todo  <div class="card-header bg-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">All Goals</h5>
                        <div class="input-group" style="max-width: 300px;">
                            <span class="input-group-text bg-light">
                                <i class="bi bi-search"></i>
                            </span>
                            <input type="text" class="form-control" placeholder="Search goals..." @bind-value="SearchTerm" @bind-value:event="oninput">
                        </div>
                    </div>
                </div> *@
                <div class="card-body">
                    @if (Goals == null)
                    {
                        <div class="text-center py-5">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="mt-2">Loading your goals...</p>
                        </div>
                    }
                    else if (!Goals.Any())
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-clipboard-x fs-1 text-muted"></i>
                            <h5 class="mt-3">No goals found</h5>
                            <p class="text-muted">Start by creating your first goal</p>
                            <button class="btn btn-outline-primary mt-2" @onclick="CreateGoal">
                                <i class="bi bi-plus-circle me-2"></i>Create Goal
                            </button>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Status</th>
                                        <th>Title</th>
                                        <th>Description</th>
                                        <th>Created Date</th>
                                        <th>Due Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var goal in Goals)
                                    {
                                        <tr>
                                            <td>
                                                @if (true) @*todo goal.IsCompleted *@
                                                {
                                                    <span class="badge bg-success rounded-pill">Completed</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning text-dark rounded-pill">In Progress</span>
                                                }
                                            </td>
                                            <td class="fw-bold">@goal.Title</td>
                                            <td>
                                                @(goal.Description?.Length > 50 ? goal.Description.Substring(0, 47) + "..." : goal.Description)
                                            </td>
                                            <td>@goal.CreatedDate.ToString("MMM d, yyyy")</td>
                                            <td>
                                                @if (goal.TargetDate.HasValue)
                                                {
                                                    @goal.TargetDate.Value.ToString("MMM d, yyyy")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No due date</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group">
                                                    <button class="btn btn-sm btn-outline-primary" @onclick="@(() => GetGoalDetail(goal.Id))">
                                                        <i class="bi bi-eye"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-warning" @onclick="() => UpdateGoal(goal.Id)">
                                                        <i class="bi bi-pencil"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteGoal(goal.Id)">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>



   
